// Удаления пробелов при строчных блоках
ib($value = -4px){
    letter-spacing: $value;
    word-spacing: $value;
}



transition($time = 0.5s, $type = linear) {
    -moz-transition: all $time $type; // Firefox 4
    -ms-transition: all $time $type; // Internet Explore 9
    -o-transition: all $time $type; // Opera
    -webkit-transition: all $time $type; // Safari и Chrome
    transition: all $time $type;
}

// Поворот блока в градусах
transformm($rotate = 45deg) {
    -webkit-transform: rotate($rotate);
    -moz-transform: rotate($rotate);
    -ms-transform: rotate($rotate);
    -o-transform: rotate($rotate);
    transform: rotate($rotate);
}

opacity($opacity) {
  opacity: $opacity / 100;
 
}

background-size(){
	-webkit-background-size: arguments;
	-moz-background-size: arguments;
	background-size: arguments;
}

// Анимация

anime() {
  -webkit-animation-name: 'varr'; 
  -webkit-animation-duration: 5s; 
  -webkit-animation-timing-function:linear; 
  -webkit-animation-delay:2s; 
  -webkit-animation-iteration-count:infinite; 
  -webkit-animation-direction:alternate; 
  -webkit-animation-play-state:running; 

  -o-animation-name: 'varr';
  -o-animation-duration: 5s;
  -o-animation-timing-function:linear;
  -o-animation-delay:2s;
  -o-animation-iteration-count:infinite;
  -o-animation-direction:alternate;
  -o-animation-play-state:running;

  -moz-animation-name: 'varr';
  -moz-animation-duration: 5s;
  -moz-animation-timing-function:linear;
  -moz-animation-delay:2s;
  -moz-animation-iteration-count:infinite;
  -moz-animation-direction:alternate;
  -moz-animation-play-state:running;

  -ms-animation-name: 'varr';
  -ms-animation-duration: 5s;
  -ms-animation-timing-function:linear;
  -ms-animation-delay:2s;
  -ms-animation-iteration-count:infinite;
  -ms-animation-direction:alternate;
  -ms-animation-play-state:running;

  animation-name: 'varr';
  animation-duration: 5s;
  animation-timing-function:linear;
  animation-delay:2s;
  animation-iteration-count:infinite;
  animation-direction:alternate;
  animation-play-state:running;
}

@keyframes varr {
  from {
    top: 50px;
    left: 0px;
  }
  50% {
    top: 150px;
    left: 100px;
    font-size: 50px;
  }
  to {
    top: 150px;
    left: 10px;
  }
}